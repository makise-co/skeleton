{
    "name": "makise-co/skeleton",
    "description": "Skeleton application of Makise-Co Framework",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitry K.",
            "email": "coder1994@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "suggest": {
        "makise-co/stack-cors": "To add CORS headers support"
    },
    "require": {
        "php": "^7.4",
        "makise-co/framework": "~1.0.0",
        "makise-co/orm-bundle": "^1.0",
        "middlewares/payload": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "swoole/ide-helper": "^4.4"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
